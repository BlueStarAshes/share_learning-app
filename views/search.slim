div class="row" style="vertical-align: bottom;"
  div class="col-lg-2"
  div class="col-lg-8"
    div class="input-group"
      input{
        type="text"
        class="form-control"
        placeholder="Search for..."
      }
      span class="input-group-btn"
        button{
          class="btn btn-default"
          type="button"
        } Go!
p 
div class="table-container"  
  p class="text-left"  Results for: '#{(@keyword.split('+')).join(" ")}'
    (Udacity: #{@udacity_count}, Coursera: #{@coursera_count}, YouTube: #{@youtube_count})
  table class="table table-filter"
    tbody
      - @udacity.each do |c|
        tr 
          td 
          td
            div class="media"
              a href="#" class="pull-left"
                img{src="#{c["photo_url"]}" 
                width="150" 
                height="110"
                } 
              div class="media-body"
                span class="media-meta pull-right" 
                h4 class="title" #{c["title"]}
                p      
                p class="summary text-left" #{c["introduction"][0..100]}
                  #{c["introduction"][100..200].gsub(/\s\w+\s*$/,'...')}
          td      
            span class="source" Udacity
            p
            input{type="button" 
            class="btn btn-info" 
            value="Link" 
            onclick="location.href = '#{c["resource_url"]}';"
            }

