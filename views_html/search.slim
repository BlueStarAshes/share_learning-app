                input{type="button" 
                class="btn btn-info" 
                id="course[#{index}].link"
                value="Link" 
                onclick="location.href = '#{course.resource_url}';"
                }
 
      - @data&.youtube_courses&.each&.with_index do |course, index|
        tr class="course_row"
