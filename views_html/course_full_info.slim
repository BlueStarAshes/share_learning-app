div class="row"
  div class="col-md-12"
    h2 id="course_title" class="pull-left" == @data.title
div class="row"
  div class="col-md-3"
    img[
      id="course_photo"
      class="img-rounded margin-tb-10"
      src=="#{@data.photo}"
      alt="course-photo"
      width="205"
    ]
  div class="col-md-9"
    div class="margin-tb-10"
      div class="text-left"
        h4 id="course_prerequisite_header" Prerequisite
        ul
          - if @data.prerequisites
            - @data.prerequisites.each do |prerequisite|
                li #{prerequisite.course_name}
      div class="text-left"
        h4 id="course_helpfulness_header" Helpfulness
        form role="form" action="/rate_helpfulness" method='post' id='rate-helpfulness-form'
          span.rating
            input#rating5 name="helpfulness_rating" type="radio" value="5" /
            label for="rating5"  5
            input#rating4 name="helpfulness_rating" type="radio" value="4" /
            label for="rating4"  4
            input#rating3 name="helpfulness_rating" type="radio" value="3" /
            label for="rating3"  3
            input#rating2 name="helpfulness_rating" type="radio" value="2" /
            label for="rating2"  2
            input#rating1 name="helpfulness_rating" type="radio" value="1" /
            label for="rating1"  1 

            input{
              type="hidden"
              name="course_id"
              value="#{@data.course_id}"
            }
        ul
          - if @data.helpfulness_rating
            li #{@data.helpfulness_rating} / 5.0
      div class="text-left"
        h4 id="course_difficulty_header" Difficulty
        form role="form" action="/rate_difficulty" method='get' id='rate-difficulty-form'
          span.rating
            input#rating5 name="difficulty_rating" type="radio" value="5" /
            label for="rating5"  5
            input#rating4 name="difficulty_rating" type="radio" value="4" /
            label for="rating4"  4
            input#rating3 name="difficulty_rating" type="radio" value="3" /
            label for="rating3"  3
            input#rating2 name="difficulty_rating" type="radio" value="2" /
            label for="rating2"  2
            input#rating1 name="difficulty_rating" type="radio" value="1" /
            label for="rating1"  1   

            input{
              type="hidden"
              name="course_id"
              value="#{@data.course_id}"
            }
        ul
          - if @data.difficulty_rating
            li #{@data.difficulty_rating} / 5.0
      div class="text-left"
        h4 id="course_source_header" Source
        ul
          li id="course_source" #{@data.source}
      div class="text-left white-space-prewrapped"
        h4 id="course_information_header" Information
        p id="course_information" #{@data.info}
      div class="text-left"
        h4 id="course_link_header" Link
        a href=="#{@data.link}" target="_new" id="course_link" Click here to visit the course

div class="table-container"
  div class="row"
    div class="col-md-12"
      h3 class="pull-left" Review
  div class="row"
    div class="col-md-12"
      form role="form" action="/course_full_info/new_review" method='post' id='new_review_form'
        div class="form-group"
          textarea name="review_content" class="form-control" rows="5" placeholder="Post your review..."
          input{type="hidden"
          name="course_id"
          value="#{@data.course_id}"
          }
          input{type="submit"
          class="btn btn-primary btn-sm pull-right margin-tb-10"
          value="Add"
          }
  - if @data.reviews
    div class="row"
      div class="col-md-8"
      div class="col-md-4"
        form class="form-inline pull-right margin-tb-10"
          div class="form-group"
            label class="margin-r-10" for="sort-btn-group" Sort by:
            div class="btn-group" id="sort-btn-group"
              input{type="button"
              class="btn btn-info btn-sm"
              value="time"
              onclick=""
              }
              input{type="button"
              class="btn btn-info btn-sm"
              value="popularity"
              onclick=""
              }
    table class="table table-hover"
      tbody
        - @data.reviews.each do |review|
          tr
            td class="col-md-1"
              - @data.reactions.each do |reaction|
                form role="form" action="/course_full_info/new_review_reaction" method='post' id='new_review_reaction_form'
                  input{type="hidden"
                  name="course_id"
                  value="#{@data.course_id}"
                  }
                  input{type="hidden"
                  name="review_id"
                  value="#{review.id}"
                  }
                  input{type="hidden"
                  name="reaction_id"
                  value="#{reaction.id}"
                  }
                  button[
                    type="submit"
                    class="btn btn-success btn-sm margin-tb-2 margin-rl-2"
                    onclick=""
                  ]
                    i class="#{ reaction.emoji }"
                    span class="badge margin-l-5" #{ @data.all_review_reactions[review.id.to_s.to_sym][reaction.type.to_sym].to_i }
            td class="col-md-11"
              p class="text-left pull-left white-space-prewrapped" #{review.content}
